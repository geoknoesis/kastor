@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# DCAT Catalog Shape
<http://example.org/shapes/Catalog>
    a sh:NodeShape ;
    sh:targetClass dcat:Catalog ;
    sh:property [
        sh:path dcterms:title ;
        sh:name "title" ;
        sh:description "A name given to the catalog." ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path dcterms:description ;
        sh:name "description" ;
        sh:description "A free-text account of the catalog." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path dcat:dataset ;
        sh:name "dataset" ;
        sh:description "A collection of data that is listed in the catalog." ;
        sh:class dcat:Dataset ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path dcterms:publisher ;
        sh:name "publisher" ;
        sh:description "The entity responsible for making the catalog available." ;
        sh:class foaf:Agent ;
        sh:minCount 0 ;
    ] .

# DCAT Dataset Shape
<http://example.org/shapes/Dataset>
    a sh:NodeShape ;
    sh:targetClass dcat:Dataset ;
    sh:property [
        sh:path dcterms:title ;
        sh:name "title" ;
        sh:description "A name given to the dataset." ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path dcterms:description ;
        sh:name "description" ;
        sh:description "A free-text account of the dataset." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path dcat:distribution ;
        sh:name "distribution" ;
        sh:description "An available distribution of the dataset." ;
        sh:class dcat:Distribution ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path dcterms:keyword ;
        sh:name "keyword" ;
        sh:description "A keyword or tag describing the dataset." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
    ] .

# DCAT Distribution Shape
<http://example.org/shapes/Distribution>
    a sh:NodeShape ;
    sh:targetClass dcat:Distribution ;
    sh:property [
        sh:path dcterms:title ;
        sh:name "title" ;
        sh:description "A name given to the distribution." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path dcat:downloadURL ;
        sh:name "downloadURL" ;
        sh:description "A URL that is a direct link to a downloadable file in a given format." ;
        sh:datatype xsd:anyURI ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path dcat:mediaType ;
        sh:name "mediaType" ;
        sh:description "The media type of the distribution as defined by IANA." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path dcterms:format ;
        sh:name "format" ;
        sh:description "The file format of the distribution." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
    ] .

# FOAF Agent Shape
<http://example.org/shapes/Agent>
    a sh:NodeShape ;
    sh:targetClass foaf:Agent ;
    sh:property [
        sh:path foaf:name ;
        sh:name "name" ;
        sh:description "A name for the agent." ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path foaf:homepage ;
        sh:name "homepage" ;
        sh:description "A homepage for the agent." ;
        sh:datatype xsd:anyURI ;
        sh:minCount 0 ;
    ] .
